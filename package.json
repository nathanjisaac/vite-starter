{
  "name": "vlcn-vite-starter",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "mkdir -p ./public/node_modules/.vite/deps && cp ./node_modules/@vlcn.io/crsqlite-wasm/dist/crsqlite.wasm ./public/node_modules/.vite/deps/crsqlite.wasm && node ./slurp.mjs && node ./server.js --dev",
    "start": "node ./slurp.mjs && NODE_ENV=production node ./server.js",
    "build": "tsc && vite build",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0"
  },
  "dependencies": {
    "@fastify/static": "^6.10.1",
    "@fastify/vite": "^4.0.0",
    "@vlcn.io/crsqlite-wasm": "^0.10.2-next.1",
    "@vlcn.io/direct-connect-browser": "^0.0.7-next.1",
    "@vlcn.io/direct-connect-common": "^0.1.1",
    "@vlcn.io/direct-connect-nodejs": "^0.1.2-next.0",
    "@vlcn.io/react": "^0.10.3-next.0",
    "@vlcn.io/rx-tbl": "^0.9.1",
    "@vlcn.io/xplat-api": "^0.9.1",
    "fastify": "^4.17.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.2.3",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "@vitejs/plugin-react": "^4.0.0",
    "eslint": "^8.38.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.3.4",
    "typescript": "^5.0.2",
    "vite": "^4.3.2"
  }
}
